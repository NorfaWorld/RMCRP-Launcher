{
  "compilerOptions": {
    "target": "es2020", // Updated target
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["es2020", "dom"], // Updated lib
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node" // Explicitly set moduleResolution
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
